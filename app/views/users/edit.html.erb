<% provide(:title, "Edit profile") %>
<h1>Update your profile</h1>
<div class="signup">
  <div class="container">
    
    <!-- Your form here -->
    <%= form_for(@user, url: user_path(current_user)) do |f| %>
      <%= f.text_field :first_name %>
      <%= f.text_field :last_name %>
      <%= f.email_field :email %>
      <%= f.submit "Update account", class: "btn-submit" %>
    <% end %>

  </div>
</div>